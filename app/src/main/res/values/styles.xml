<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "NoActionBar" parent = "Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.AppCompat.SeekBar.rep_set_choose">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:max">10</item>
        <item name="android:progress">5</item>
        <item name="android:requiresFadingEdge">none</item>
        <item name="android:scrollbarAlwaysDrawHorizontalTrack">false</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
    </style>

    <style name="AppDarkTheme" parent="android:Theme.Holo.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorMenu">@color/DarkTheme_couleur_menu</item>
        <item name="backgroundColor">@color/DarkTheme_backGroundColor</item>
        <item name="buttonBackgroundColor">@color/DarkTheme_couleur_bouton</item>
    </style>
    <style name="AppLightTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorMenu">@color/LightTheme_couleur_menu</item>
        <item name="backgroundColor">@color/LightTheme_backGroundColor</item>
        <item name="buttonBackgroundColor">@color/LightTheme_couleur_bouton</item>
    </style>
</resources>
